<mvc:View
    controllerName="multiselectinput.controller.MultiSelectView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <form:SimpleForm id="_IDGenSimpleForm">
            <Label
                id="_IDGenLabel"
                text="Name"
            />
            <MultiInput
                id="inpMultiInput"
                suggestionItems="{oMultiModel>/}"
                suggest=".onSuggest"
                showValueHelp="true"
                valueHelpRequest=".onValHelpReq"
                width="400px"
            >
                <core:Item
                    id="_IDGenItem"
                    key="{oMultiModel>name}"
                    text="{oMultiModel>name}"
                />
            </MultiInput>
        </form:SimpleForm>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    type="Accept"
                    text="Submit"
                    press=".onSubmit"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>

